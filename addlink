#!/usr/bin/env rc

werc=$HOME/mount/werc/sites/alephnull.se/links/
if(test -d werc) {
	switch($#*){
	case 2
		echo '['$1']('$2')' >> $werc/unsorted.md
	case 3
		echo '['$1']('$2')' >> werc/$3.md
	case 4
		echo '['$1']('$2')' $4 >> werc/$3.md
	case *
		echo 'Usage: addlink link url <category> <explanation text>'
	}
}
